{
	"name": "thepercival/vobetting-api",
	"description": "website for football betting and analytics",
	"keywords": ["games","football","betting","analytics"],
	"homepage": "https://www.vobetting.nl/",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "Coen Dunnink",
			"email": "coendunnink@gmail.com"
		}
	],
	"support": {
		"email": "coendunnink@gmail.com"
	},
	"require": {
		"thepercival/voetbal": "dev-master",
		"php": "^7.2",
		"slim/slim": "^3.1",
		"slim/php-view": "^2.0",
		"monolog/monolog": "^1.24",
		"doctrine/orm": "^2.6",
		"tuupola/base62": "^0.11.0",
		"tuupola/cors-middleware": "^0.9.0",
		"tuupola/slim-basic-auth": "^3.2",
		"tuupola/slim-jwt-auth": "^3.1",
		"crell/api-problem": "^3.0",
		"gofabian/negotiation-middleware": "^0.1.2",
		"vlucas/phpdotenv": "^2.5",
		"symfony/property-access": "^4.2",
		"phpmailer/phpmailer": "^6.0",
		"jms/serializer": "^2.0",
		"symfony/yaml": "^4.2",
		"zf1/zend-pdf": "^1.12",
		"petercoles/betfair-exchange": "^1.2",
        "ext-curl": "*"
	},
	"require-dev": {
        "phpstan/phpstan": "^0.11.5",
		"phpunit/phpunit": "^7.0"
	},
    "autoload": {
      "psr-4": {
        "VOBetting\\": "domain/",
        "App\\": "app/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "VOBettingTest\\": "tests/cases"
      }
    },
    "scripts": {
		"start": "php -S localhost:2999 -t public public/index.php",
		"test": [
			"vendor/bin/phpunit --bootstrap vendor/autoload.php tests/"
		],
        "stan": "vendor/bin/phpstan analyse --level=1 app domain tests"
    }
}
