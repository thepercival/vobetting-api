{
	"name": "thepercival/vobetting-api",
	"description": "website for football betting and analytics",
	"keywords": ["games","football","betting","analytics"],
	"homepage": "https://www.vobetting.nl/",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "Coen Dunnink",
			"email": "coendunnink@gmail.com"
		}
	],
	"support": {
		"email": "coendunnink@gmail.com"
	},
	"require": {
		"thepercival/voetbal": "dev-master",
        "php": ">=7.1",
		"slim/slim": "^3.1",
		"slim/php-view": "^2.0",
		"monolog/monolog": "^1.17",
		"doctrine/orm": "^2.5",
		"tuupola/slim-jwt-auth": "^2.3",
		"vlucas/phpdotenv": "^2.4",
		"firebase/php-jwt": "^4.0",
		"symfony/property-access": "^3.1",
		"phpmailer/phpmailer": "^5.0.0",
		"jms/serializer": "^1.5",
		"symfony/yaml": "^3.2",
		"petercoles/betfair-exchange": "^1.1"
	},
    "require-dev": {
      "phpunit/phpunit": "6.x"
    },
    "autoload": {
      "psr-4": {
        "VOBetting\\": "domain/",
        "App\\Action\\": "app/actions"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "VOBetting\\Tests\\": "tests/"
      }
    },
    "minimum-stability": "dev",
    "scripts": {
      "start": "php -S localhost:4201 -t public public/index.php",
      "test": [
        "vendor/bin/phpunit --bootstrap vendor/autoload.php tests/"
      ]
    }
}
